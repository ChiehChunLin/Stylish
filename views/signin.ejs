<!DOCTYPE html>
<html lang="zh-Hant">
  <head>
    <%- include ("partials/html") %>
    <!-- Web Page Description -->
    <title>STYLISH | SignIn</title>
  </head>
  <body>
    <%- include ("partials/header", { shoppingCount: 0 }) %>
    <main>
      <%- include ("partials/message", { message }) %>
      <div class="main-content">
        <h3 style="font-size: 2rem">
          Login Here or <a href="/api/1.0/user/signup"><u>Sign-up</u></a>
        </h3>
        <br />
        <div id="status"></div>
        <div class="col-md-12">
          <button
            id="facebookSignin"
            type="click"
            class="btn"
            style="
              padding: 0.2rem 0.5rem;
              background-color: rgb(7, 7, 7);
              color: rgb(255, 255, 255);
              display: flex;
              align-items: center;
              width: max-content;
              margin: auto;
            "
          >
            <img
              src="/public/icons/3225194_facebook_icon.png"
              style="width: 25px; height: 25px; margin-right: 0.5rem"
            />
            Signin with Facebook
          </button>
        </div>
        <br />
        <form id="loginForm">
          <div class="sign-group">
            <label for="inputEmail">Email address：</label>
            <input
              class="sign-control"
              type="email"
              id="inputEmail"
              placeholder="Enter email"
              name="email"
              value="guest123456@fakemail.com"
              required
            />
          </div>
          <br />
          <div class="sign-group">
            <label for="inputPassword">Password：</label>
            <input
              class="sign-control"
              type="password"
              id="inputPassword"
              placeholder="At least one lower letter and number"
              name="password"
              value="guest123456"
              required
            />
            <div class="showPwBox">
              <input id="showPw" type="checkbox" onclick="myFunction()" />
              <label for="showPw" style="font-size: 1rem;">Show Password</label>
            </div>
            <script>
              function myFunction() {
                var pw = document.getElementById("inputPassword");
                if (pw.type == "password") {
                  pw.type = "text";
                } else {
                  pw.type = "password";
                }
              }
            </script>
          </div>
          <br />
          <button type="submit" class="sign-btn sign-btn-primary">Login</button>
        </form>
        <!-- <button id="logoutBtn" type="click" class="sign-btn sign-btn-primary">
          Logout
        </button> -->
      </div>
    </main>
    <%- include ("partials/footer") %>
  </body>
</html>
