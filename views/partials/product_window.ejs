<%if (productData) { %>
  <% productData.productList.forEach((product, index) => { %>
    <% if (index % 3 === 0 ) { %> 
        <div class="row-product">
    <% } %>
          <div class="product_window" value="<%=product.id%>">
            <div class="img_container">
              <img src="<%=product.main_image%>" alt="product">
            </div>
            <div class="item colors">
              <%if (productData.colors) { %>
              <% for (let i =0; i< product.colors.length ; i++) { %>
                <div class="color" style="background-color:<%=`#${product.colors[i].code}`%>" ></div>
              <% } %>
              <% } %>
            </div>
            <div class="item title"><%=product.title%></div>
            <div class="item price">TWD.<%=product.price%></div>
          </div>
    <% if ((index + 1) % 3 === 0 || index === productData.productList.length - 1) { %>
        </div>
    <% } %>
  <% }); %>
<% } %>
<div class="row-product">
  <div class="pages_group">
    <% for (let i =0; i < productData.totalPage; i++) { %>
      <% if (productData.category) { %> 
        <% if (productData.currentPage == i) { %>        
          <div class="page selected"><a href=<%=`${productData.category}?paging=${productData.currentPage}`%>><%= (i+1)%></a></div>
        <% } else{ %>
          <div class="page"><a href=<%=`${productData.category}?paging=${i}`%>><%= (i+1)%></a></div>
        <% } %>
      <% } %>
      <% if (productData.keyword) { %> 
        <% if (productData.currentPage == i) { %>        
          <div class="page selected"><a href=<%=`${productData.keyword}?paging=${productData.currentPage}`%>><%= (i+1)%></a></div>
        <% } else{ %>
          <div class="page"><a href=<%=`${productData.keyword}?paging=${i}`%>><%= (i+1)%></a></div>
        <% } %>
      <% } %>
    <% } %>
  </div>
</div>